#! /bin/bash
#############################
#author:wanghai
#############################

echo -en "\033[35m"

for tmp in `ls`
do
    if [ -d $tmp -a -e $tmp/.git/config ];then
        echo "-------- $tmp -------"
        cd $tmp
        echo "sed -i 's/10.92.11.178/10.91.11.183/' .git/config"
        sed -i 's/10.92.11.178/10.91.11.183/' .git/config
        cd -
        echo
    fi
done

echo -en "\033[0m"

